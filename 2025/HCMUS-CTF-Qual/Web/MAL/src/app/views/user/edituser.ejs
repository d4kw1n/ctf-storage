<%- include("../partials/header") %>

<div class="container" style="margin-top: 15px;">
  <div class="row gutters">
    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
      <div class="card h-100">
        <div class="card-body">
          <div class="account-settings">
            <div class="user-profile">
              <div class="user-avatar">
                <img
                  src="<%= data?.images?.webp?.image_url %>"
                  alt="Generic placeholder image"
                />
              </div>
              <h5 class="user-name"><%= currentUser.username %></h5>
              <h6 class="user-email"><%= (data?.email ? data?.email : "TBA") %></h6>
            </div>
            <div class="about">
              <h5>About</h5>
              <p>
                <%- (data?.about ? DOMPurify.sanitize(bbobHTML.default(data?.about, presetHTML5.default()), { FORBID_TAGS: ['img'] }) : "") %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
      <div class="card h-100">
        <form class="card-body" method="post">
          <div class="row gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
              <h6 class="mb-2 text-primary">Personal Details</h6>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="fullName">Full Name</label>
                <input
                  type="text"
                  class="form-control"
                  name="data.fullname"
                  id="fullName"
                  placeholder="Enter full name"
                  value="<%= (data?.fullname ? data?.fullname : "") %>"
                />
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="eMail">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="eMail"
                  name="data.email"
                  placeholder="Enter email"
                  value="<%= (data?.email ? data?.email : "") %>"
                />
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="phone">Phone</label>
                <input
                  type="text"
                  class="form-control"
                  id="phone"
                  name="data.phone"
                  placeholder="Enter phone number"
                  value="<%= (data?.phone ? data?.phone : "") %>"
                />
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="website">Website URL</label>
                <input
                  type="url"
                  class="form-control"
                  id="website"
                  name="data.website"
                  placeholder="Website url"
                  value="<%= (data?.website ? data?.website : "") %>"
                />
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="secret">Secret key</label>
                <input
                  type="url"
                  class="form-control readonly-input"
                  id="secret"
                  name="secret"
                  value="<%= (data?.secret ? data?.secret : "") %>"
                  readonly
                />
              </div>
            </div>
          </div>
          <div class="row gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
              <h6 class="mt-3 mb-2 text-primary">Address</h6>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="Street">Street</label>
                <input
                  type="name"
                  class="form-control"
                  id="Street"
                  name="data.address.street"
                  placeholder="Enter Street"
                  value="<%= (data?.address?.street ? data?.address?.street : "") %>"
                />
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="ciTy">City</label>
                <input
                  type="name"
                  class="form-control"
                  id="ciTy"
                  name="data.address.city"
                  placeholder="Enter City"
                  value="<%= (data?.address?.city ? data?.address?.city : "") %>"
                />
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="sTate">State</label>
                <input
                  type="text"
                  class="form-control"
                  name="data.address.state"
                  id="sTate"
                  placeholder="Enter State"
                  value="<%= (data?.address?.state ? data?.address?.state : "") %>"
                />
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="zIp">Zip Code</label>
                <input
                  type="text"
                  class="form-control"
                  name="data.address.zip"
                  id="zIp"
                  placeholder="Zip Code"
                  value="<%= (data?.address?.zip ? data?.address?.zip : "") %>"
                />
              </div>
            </div>
          </div>
          <div class="row gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
              <div class="text-right">
                <input class="btn btn-primary" type="submit" value="Update">
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
